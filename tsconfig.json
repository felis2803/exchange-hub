{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    },
    "exclude": ["dist", "node_modules", "examples", "tests"],
    "include": ["src/**/*.ts"]
}
