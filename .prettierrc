{
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "parser": "markdown"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss"
            }
        },
        {
            "files": "*.yml",
            "options": {
                "parser": "yaml",
                "tabWidth": 2
            }
        }
    ]
}
